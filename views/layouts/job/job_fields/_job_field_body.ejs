<div class="card-body">
    <div class="form-group">
        <label class="form-label" for="name">Location:</label>
        <input  class="form-control mb-2" type="text" name="location" placeholder="Location" value="<%= job.location %>" required>
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Please enter location.</div>
    </div>
    <div class="form-group">
        <label class="form-label" for="name">Required Skills:</label>
        <input  class="form-control mb-2" type="text" name="skills" placeholder="Required Skills" value="<%= job.skills %>" required>
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Please enter required skills.</div>
    </div>
    <div class="form-group">
        <label class="form-label" for="name">Details:</label>
        <textarea class="form-control mb-2" name="details" placeholder="Details" rows="5" required><%= job.details %></textarea>
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Please enter details.</div>
    </div>
</div>