<div class="container-sm animate__animated  animate__animated animate__zoomInDown">
    <div class="row">
        <div class="col-lg-3"></div>

        <div class="col-lg-6 mt-5 pt-5">
            <h1 class="text-center">Recover Account</h1>

            <%- include("../layouts/_flash_message") %>

            <form method="POST" action="/recover" class="needs-validation" novalidate>
                <div class="form-group">
                    <div class="form-floating mb-3">
                        <input  class="form-control mb-2 shadow-sm" type="email" name="email" placeholder="Registered Email" value="<%= email %>" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback">Please enter your registered email.</div>
                        <label class="form-label text-secondary" for="email"><small>Registered Email</small></label>
                    </div>
                </div>
                
                <input class="btn btn-dark float-end" type="submit" value="Send OTP">
            </form>
        </div>

        <div class="col-lg-3"></div>
    </div>
</div>