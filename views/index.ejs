<div class="container-fluid pt-3 animate__animated animate__bounceInDown">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <%- include("layouts/_flash_message") %>
            <%- include("./layouts/job/_new_job") %>
            <% for(job of jobs) { %>
                <% if (job.employer === username) { %>
                    <%- include("./layouts/job/_job_edit") %>
                <% } else if (job_applications[job.id] !== null) { %>
                    <%- include("./layouts/job/_job_view_applied", { application: job_applications[job.id]}) %>
                <% } else { %>
                    <%- include("./layouts/job/_job_view") %>
                <% } %>
            <% } %>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<%- include("./application/_application_edit_modal") %>
