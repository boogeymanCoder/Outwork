<div class="container-fluid pt-3">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <%- include("layouts/_data_field_message") %>
            <form method="POST" action="/job/new" class="needs-validation" novalidate>
                <div class="card mb-3 mt-3">
                    <div class="card-header">
                        <div class="form-group">
                            <label for="name">Job Name:</label>
                            <input  class="form-control mb-2" type="text" name="name" placeholder="Job Name" required>
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please enter job name.</div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Location:</label>
                            <input  class="form-control mb-2" type="text" name="location" placeholder="Location" required>
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please enter location.</div>
                        </div>
                        <div class="form-group">
                            <label for="name">Required Skills:</label>
                            <input  class="form-control mb-2" type="text" name="skills" placeholder="Required Skills" required>
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please enter required skills.</div>
                        </div>
                        <div class="form-group">
                            <label for="name">Details:</label>
                            <textarea class="form-control mb-2" name="details" placeholder="Details" rows="5" required></textarea>
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please enter details.</div>
                        </div>
                        <input type="submit" class="btn btn-dark float-end" value="Post">
                    </div>
                </div>
            </form>
            <% for(job of jobs) { %>
                <div class="card mb-3 mt-3  ">
                    <div class="card-header">
                        <h4 class="card-title"><%= job.name %></h4>
                    </div>
                    <div class="card-body">
                        <p><strong>Location: </strong><%= job.location %></p>
                        <p><strong>Skills: </strong><%= job.skills %></p>
                        <strong>Details: </strong>
                        <blockquote class="blockquote text-center"><%= job.details %></blockquote>
                        <footer class="blockquote-footer text-end">@<%= job.employer %> (<%= job.postDate.toUTCString() %>)</footer>
                        <a href="#" class="btn btn-dark stretched-link float-end">Apply</a>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>