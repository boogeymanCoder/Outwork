<div class="container-sm">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 mt-5 pt-5">
            <h1 class="text-center">Login</h1>
            <p class="text-center">
                <strong>New to this site?
                    <a href="/register" class="text-secondary">Register</a>
                </strong>
            </p>
            <%- include("_data_field_message") %>
            <form method="POST" action="/login" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="emailUsername">Email or Username:</label>
                    <input  class="form-control mb-2"type="text" name="emailUsername" placeholder="Email or Username" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please enter email or username.</div>
                </div>
                <div class="form-group">
                    <label for="emailUsername">Password:</label>
                    <input class="form-control mb-2" type="password" name="password" placeholder="Password" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please entetr password.</div>
                </div>
                <a href="/recover" class="text-secondary underline">Forgot passsword?</a>
                <div class="form-group">
                    <input class="btn btn-dark float-right" type="submit" value="Login">
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>